{
  "name": "irohajs",
  "version": "1.0.0",
  "description": "",
  "keywords": [],
  "main": "dist/irohajs.js",
  "typings": "dist/src/irohajs.d.ts",
  "files": [
    "dist"
  ],
  "author": "",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/hyperledger/iroha-javascript/issues"
  },
  "homepage": "https://github.com/hyperledger/iroha-javascript#readme",
  "engines": {
    "node": ">=6.0.0"
  },
  "scripts": {
    "lint": "tslint -e **/node_modules/** -e **/dist/** **/*.ts ",
    "prebuild": "rimraf dist && rimraf docs",
    "build": "webpack -p",
    "build:dev": "webpack",
    "test": "jest && test:browser",
    "build:web": "webpack -p --target=web",
    "build:node": "webpack -p --target=node",
    "test:watch": "jest --watch",
    "test:prod": "npm run lint && npm run test -- --coverage --no-cache",
    "test:browser": "karma start karma.conf.ts",
    "deploy-docs": "node tools/gh-pages-publish.js",
    "report-coverage": "cat ./coverage/lcov.info | coveralls",
    "commit": "git-cz",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post",
    "prepush": "npm run test:prod && npm run build",
    "commitmsg": "validate-commit-msg"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/soramitsu/iroha-javascript.git"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    },
    "validate-commit-msg": {
      "types": "conventional-commit-types",
      "helpMessage": "Use \"npm run commit\" instead, we use conventional-changelog format :) (https://github.com/commitizen/cz-cli)"
    }
  },
  "devDependencies": {
    "@types/chai": "^4.0.4",
    "@types/mocha": "^2.2.43",
    "@types/node": "^8.0.31",
    "@types/webpack": "^3.0.12",
    "awesome-typescript-loader": "^3.1.0",
    "babel-core": "^6.22.1",
    "babel-preset-env": "^1.2.0",
    "chai": "^4.1.2",
    "colors": "^1.1.2",
    "commitizen": "^2.9.5",
    "coveralls": "^2.13.3",
    "cz-conventional-changelog": "^2.0.0",
    "husky": "^0.13.1",
    "jasmine": "^2.5.3",
    "karma": "^1.7.0",
    "karma-chrome-launcher": "^2.1.1",
    "karma-mocha": "^1.3.0",
    "karma-sourcemap-loader": "^0.3.7",
    "lodash": "^4.17.4",
    "mocha": "^3.5.3",
    "prompt": "^1.0.0",
    "replace-in-file": "^2.3.2",
    "rimraf": "^2.5.4",
    "semantic-release": "^6.3.2",
    "standard-version": "^4.0.0",
    "ts-node": "^2.0.0",
    "tslint": "^4.3.1",
    "tslint-config-standard": "^4.0.0",
    "typedoc": "^0.5.7",
    "typedoc-webpack-plugin": "^1.1.3",
    "typescript": "^2.1.6",
    "validate-commit-msg": "^2.10.1",
    "webpack": "^3.6.0"
  },
  "dependencies": {
    "axios": "^0.16.2",
    "grpc": "^1.6.0",
    "js-sha3": "^0.5.7",
    "moment": "^2.18.1",
    "supercop.js": "^2.0.1"
  }
}
